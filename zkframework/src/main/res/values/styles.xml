<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hor_div_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hor_divider_height</item>
        <item name="android:background">@color/color_dedede</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_474b4f</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/color_474b4f</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/swipeback_shadow_left</item>
        <item name="shadow_right">@drawable/swipeback_shadow_right</item>
        <item name="shadow_bottom">@drawable/swipeback_shadow_bottom</item>
    </style>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#4876FF</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#3A5FCD</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="AppGreenTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#6fbd41</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#6fbd41</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
    </style>

    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogSingleButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/single_btn_bg</item>
    </style>

    <style name="DialogLeftButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/left_btn_bg</item>
    </style>

    <style name="DialogRightButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/right_btn_bg</item>
    </style>


    <style name="Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RequestIcoArrow">
        <item name="android:layout_marginRight">@dimen/ico_next_margin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <declare-styleable name="SwipeDragLayout">
        <attr name="need_offset" format="float"/>
        <attr name="click_to_open" format="boolean"/>
        <attr name="click_to_close" format="boolean"/>
    </declare-styleable>
</resources>